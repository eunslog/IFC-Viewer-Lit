{
  "$schema": "https://json.schemastore.org/tsconfig",  
  "compilerOptions": {
    "target": "ES2022",
    // "target": "ES2020", // original
    "useDefineForClassFields": true,
    // "module": "CommonJS", // add
    "module": "ESNext",
    // "moduleResolution": "NodeNext", // add
    // "module": "commonjs", // add
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,
    "outDir": "dist", // add
    "rootDir": "src", // add
    "esModuleInterop": true, // add
    /* Bundler mode */
    "moduleResolution": "bundler",
    // "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,

    "experimentalDecorators": true, // add
    "emitDecoratorMetadata": true, // add

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true // add
  },
  "include": ["src/**/*"],
  "ts-node": {
    "esm": true,
  },
  "exclude": ["node_modules"] // add
}
